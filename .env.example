# =============================================================================
# TRADING BOT CONFIGURATION
# =============================================================================
# Copy this file to .env and configure your settings
# All values are examples - replace with your actual configuration

# =============================================================================
# ENVIRONMENT & OPERATION MODE
# =============================================================================
# Application environment: development, staging, production, testing
ENVIRONMENT=development

# Dry run mode: true = no real trades, false = live trading
# IMPORTANT: Set to false only when you're ready for live trading!
DRY_RUN=true

# In production, live trading requires explicit confirmation
# CONFIRM_LIVE_TRADING=yes

# =============================================================================
# METATRADER 5 CONNECTION
# =============================================================================
# Connection mode: true = attach to running terminal, false = headless login
MT5_ATTACH_MODE=true

# Headless mode settings (required when ATTACH_MODE=false)
# MT5_TERMINAL_PATH=C:\Program Files\MetaTrader 5\terminal64.exe
# MT5_LOGIN=12345678
# MT5_PASSWORD=your_password_here
# MT5_SERVER=YourBroker-Demo

# Connection timeout in seconds
# MT5_CONNECTION_TIMEOUT=30

# =============================================================================
# TRADING STRATEGY
# =============================================================================
# Trading symbol
TRADING_SYMBOL=XAUUSD

# Timeframe in minutes (1, 5, 15, 30, 60, 240, 1440)
TRADING_TF_MIN=30

# Risk per trade as percentage of balance (0.1% to 10%)
TRADING_RISK_PCT=0.01

# Trading session filter: TOKYO, LDN_NY, ANY
TRADING_SESSION=ANY

# Strategy parameters
TRADING_COOLDOWN_MULT=1.0
TRADING_MIN_ATR=1.2
TRADING_SL_MULT=1.5
TRADING_TP_MULT=3.0

# Position sizing: USD P&L per lot per $1 price move
TRADING_USD_PER_LOT_PER_USD_MOVE=100.0

# =============================================================================
# SAFETY & RISK CONTROLS
# =============================================================================
# Enable safety gates
SAFETY_LIMITS_ENABLED=true

# Daily limits
SAFETY_MAX_TRADES_PER_DAY=8
SAFETY_MAX_DAILY_LOSS_PCT=3.0
SAFETY_MAX_OPEN_POSITIONS=1

# News filtering
SAFETY_ENABLE_NEWS_FILTER=true
SAFETY_NEWS_WINDOW_MINUTES=60

# =============================================================================
# TELEGRAM NOTIFICATIONS
# =============================================================================
# Telegram bot token from @BotFather
TELEGRAM_BOT_TOKEN=1234567890:ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijk

# Multiple chat IDs (comma-separated)
TELEGRAM_CHAT_IDS=-1001234567890,@your_channel,-1009876543210

# Single chat ID (legacy fallback)
# TELEGRAM_CHAT_ID=-1001234567890

# Error alerts via Telegram
TELEGRAM_ERROR_ALERTS=true

# Telegram API timeout
# TELEGRAM_TIMEOUT_SECONDS=30

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Trading Economics API key for news filtering
# API_TE_API_KEY=your_te_api_key_here

# API request timeout
# API_TIMEOUT_SECONDS=10

# =============================================================================
# LOGGING & AUDIT
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log directory (relative to project root)
# LOG_DIRECTORY=logs

# Enable trade audit logging
LOG_TRADE_LOG_ENABLED=true

# Log retention in days
# LOG_RETENTION_DAYS=30

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Force specific trading decisions (for testing only)
# TEST_FORCE_SIDE=BUY

# Enable debug features
# DEBUG_ENABLED=true
