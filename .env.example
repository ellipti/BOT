# AIVO Trading Bot - Environment Configuration Template
#
# üîê SECURITY NOTICE:
# This file contains only template/example values.
# DO NOT put real secrets here - this file is committed to git.
#
# üõ°Ô∏è USE KEYRING FOR SECRETS:
# Store actual secrets using: python scripts/secret_set.py SECRET_NAME "secret_value"
# Keyring automatically uses Windows Credential Manager on Windows.
#
# üí° USAGE:
# 1. Copy this file to .env (which is git-ignored)
# 2. Store real secrets in keyring using the scripts
# 3. Only use .env for non-sensitive configuration overrides

# ===============================
# üöÄ APPLICATION SETTINGS
# ===============================
ENVIRONMENT=development
DRY_RUN=true
# Set to "yes" in production to enable live trading (requires keyring secrets)
CONFIRM_LIVE_TRADING=no

# ===============================
# üí∞ TRADING CONFIGURATION
# ===============================
TRADING_SYMBOL=XAUUSD
TRADING_TF_MIN=30
TRADING_RISK_PCT=0.01
TRADING_SESSION=ANY
TRADING_COOLDOWN_MULT=1.0

# ATR Configuration
TRADING_ATR_PERIOD=14
TRADING_MIN_ATR=1.2
TRADING_SL_MULT=1.5
TRADING_TP_MULT=3.0
TRADING_USD_PER_LOT_PER_USD_MOVE=100.0

# ===============================
# ÔøΩ MT5 CONNECTION
# ===============================
MT5_ATTACH_MODE=true
MT5_CONNECTION_TIMEOUT=30
# Note: MT5_PASSWORD is loaded from keyring - use scripts/secret_set.py

# For headless mode (set ATTACH_MODE=false):
# MT5_TERMINAL_PATH=C:/Program Files/MetaTrader 5/terminal64.exe
# MT5_LOGIN=your_account_number
# MT5_SERVER=YourBroker-Server

# ===============================
# ÔøΩÔ∏è SECRETS (USE KEYRING)
# ===============================
# These should be stored using keyring, NOT in .env files!
#
# Required secrets (store with scripts/secret_set.py):
# - TELEGRAM_TOKEN: Your Telegram bot token
# - MT5_PASSWORD: Your MT5 account password
# - TE_API_KEY: Trading Economics API key (optional)
#
# Example usage:
#   python scripts/secret_set.py TELEGRAM_TOKEN "1234567890:ABCdefGhIJklmNOPqrsTUVwxyz"
#   python scripts/secret_set.py MT5_PASSWORD "your_mt5_password"
#   python scripts/secret_set.py TE_API_KEY "your_trading_economics_key"

# ===============================
# ÔøΩ TELEGRAM (BOT TOKEN FROM KEYRING)
# ===============================
# TELEGRAM_CHAT_IDS: Comma-separated list of chat IDs for notifications
TELEGRAM_CHAT_IDS=your_chat_id_here
TELEGRAM_ERROR_ALERTS=true
TELEGRAM_TIMEOUT_SECONDS=30

# ===============================
# üìä FEED & EXECUTION
# ===============================
FEED_KIND=live
FEED_SLIPPAGE_KIND=fixed
FEED_FIXED_SLIPPAGE_PIPS=1.0
FEED_PIP_SIZE=0.1
FEED_SPREAD_PIPS=10.0
FEED_FEE_PER_LOT=0.0

# ===============================
# üõ°Ô∏è SAFETY & RISK MANAGEMENT
# ===============================
SAFETY_LIMITS_ENABLED=true
SAFETY_MAX_TRADES_PER_DAY=8
SAFETY_MAX_DAILY_LOSS_PCT=3.0
SAFETY_MAX_OPEN_POSITIONS=1
SAFETY_ENABLE_NEWS_FILTER=true
SAFETY_NEWS_WINDOW_MINUTES=60

# Risk Governor V2 Settings
RISK_MAX_DAILY_LOSS_PERCENTAGE=5.0
RISK_MAX_DAILY_TRADES=15
RISK_MAX_CONSECUTIVE_LOSSES_V2=3
RISK_MAX_TRADES_PER_SESSION=5
RISK_COOLDOWN_AFTER_LOSS_MIN=30
RISK_ENABLE_TELEGRAM_ALERTS=true

# ===============================
# üìä PERFORMANCE & MONITORING
# ===============================
# Performance & Workload Isolation
WORKERS=2
ENABLE_ASYNC_CHARTS=true
ENABLE_ASYNC_REPORTS=true
ENABLE_SCHEDULER=true
LATENCY_THRESHOLD_MS=100.0

# Observability
METRICS_ENABLE_HTTP_METRICS=true
METRICS_PORT=9101
METRICS_HOST=0.0.0.0
METRICS_ENABLE_PROMETHEUS=false
METRICS_HEALTH_CHECK_INTERVAL=30

# ===============================
# üìù LOGGING
# ===============================
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30
LOG_TRADE_LOG_ENABLED=true

# ===============================
# üîó EXTERNAL INTEGRATIONS
# ===============================
# Trading Economics (API key from keyring)
TRADING_CALENDAR_ENABLED=false
API_TIMEOUT_SECONDS=10

# ===============================
# üíæ DATA & STATE
# ===============================
IDEMPOTENCY_DB=infra/id_store.sqlite

# ===============================
# ÔøΩ EVENT SYSTEM
# ===============================
ENABLE_EVENT_BUS=true

# ===============================
# üîê SECURITY REMINDERS
# ===============================
#
