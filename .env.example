# =============================================================================
# Trading Bot Environment Configuration
# =============================================================================
# Copy this file to .env and customize with your actual values
# Never commit .env file to version control!

# =============================================================================
# üîå MetaTrader 5 Connection Settings
# =============================================================================

# MT5 Terminal executable path (Windows only)
# For attach mode: path to running terminal
# For login mode: path to terminal executable
MT5_TERMINAL_PATH=C:\Program Files\MetaTrader 5\terminal64.exe

# Connection mode: true=attach to running terminal, false=login with credentials
# Attach mode: connects to already logged-in terminal (recommended for live)
# Login mode: programmatically logs in with credentials (good for testing)
ATTACH_MODE=true

# Login credentials (required only when ATTACH_MODE=false)
# Demo account example:
MT5_LOGIN=942138
MT5_PASSWORD=your_mt5_password_here
MT5_SERVER=MOTForex-Demo-1

# =============================================================================
# üìà Trading Strategy Configuration
# =============================================================================

# Primary trading symbol (currency pair or commodity)
# Examples: EURUSD, GBPUSD, XAUUSD (Gold), USDJPY
SYMBOL=XAUUSD

# Timeframe in minutes for chart analysis
# Common values: 1, 5, 15, 30, 60, 240, 1440
# 30 = 30-minute charts (recommended for intraday)
TF_MIN=30

# Risk percentage per trade (as decimal)
# 0.01 = 1% of account balance per trade
# 0.02 = 2% risk (more aggressive)
# 0.005 = 0.5% risk (conservative)
RISK_PCT=0.01

# Stop Loss multiplier (based on ATR - Average True Range)
# 1.5 = Stop loss at 1.5x ATR distance from entry
# Higher values = wider stops, lower risk of premature exits
SL_MULT=1.5

# Take Profit multiplier (based on ATR)
# 3.0 = Take profit at 3x ATR distance (2:1 risk-reward ratio)
# Recommended: 2.0-4.0 for good risk-reward
TP_MULT=3.0

# =============================================================================
# üõ°Ô∏è Safety & Risk Management
# =============================================================================

# Dry run mode: true=paper trading only, false=real trades
# ALWAYS start with DRY_RUN=true for testing!
DRY_RUN=true

# Maximum number of trades per day (prevents overtrading)
# Recommended: 3-5 for conservative approach
MAX_TRADES_PER_DAY=3

# Maximum daily loss percentage (as decimal)
# 0.05 = 5% daily loss limit (trading stops for the day)
# 0.03 = 3% conservative daily limit
MAX_DAILY_LOSS_PCT=0.05

# Maximum number of simultaneous open positions
# 1 = Only one position at a time (recommended)
# 2-3 = Multiple positions (requires more capital)
MAX_OPEN_POSITIONS=1

# Cooldown period between trades (in minutes)
# 60 = 1 hour minimum between trades
# 30 = 30 minutes (more active trading)
TRADE_COOLDOWN_MINUTES=60

# Trading session restrictions
# TOKYO = Asian session (9:00-12:00 UB time)
# LDN_NY = London/NY overlap (16:00-02:00 UB time)
# ANY = Trade any time (24/5)
TRADING_SESSION=LDN_NY

# =============================================================================
# üì± Telegram Notifications
# =============================================================================

# Telegram Bot Token (get from @BotFather)
# Example format: 123456789:ABCdefGHIjklMNOpqrSTUvwxYZ
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Chat IDs for notifications (comma-separated for multiple recipients)
# To get your chat ID: send /start to @userinfobot
# Examples:
# Single user: 123456789
# Multiple users: 123456789,987654321,555666777
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Send charts with trade notifications
# true = Include technical analysis charts
# false = Text notifications only
TELEGRAM_SEND_CHARTS=true

# =============================================================================
# üîó External Integrations
# =============================================================================

# Trading Economics API for news filtering
# Get free API key from: https://tradingeconomics.com/api
# Leave empty to disable news filtering
TRADING_ECONOMICS_API_KEY=your_trading_economics_api_key

# News impact filtering
# HIGH = Only avoid high-impact news (recommended)
# MEDIUM = Avoid medium and high impact news
# ALL = Avoid all news events (very conservative)
NEWS_FILTER_LEVEL=HIGH

# =============================================================================
# üîß Technical Settings
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR
# DEBUG = Detailed logs (development)
# INFO = Standard logs (production)
LOG_LEVEL=INFO

# Log file rotation
# true = Create new log files daily
# false = Single log file (grows large)
LOG_ROTATION=true

# Chart generation settings
# true = Generate and save trading charts
# false = Skip chart generation (faster)
GENERATE_CHARTS=true

# Database/State persistence
# SQLite database file for trade history
# Leave default unless you have specific requirements
DB_PATH=trading_data.db

# =============================================================================
# üèóÔ∏è Development & Testing
# =============================================================================

# Force trading signals (for testing only)
# NONE = Normal operation
# BUY = Force buy signals
# SELL = Force sell signals
# Use with DRY_RUN=true for testing strategies
FORCE_SIGNAL=NONE

# Backtesting data source
# LOCAL = Use local CSV files
# MT5 = Download from MT5 (requires connection)
BACKTEST_DATA_SOURCE=MT5

# Strategy selection
# BASELINE = Default MA crossover + RSI strategy
# ADVANCED = Multi-timeframe analysis
# CUSTOM = Custom strategy implementation
STRATEGY_NAME=BASELINE

# =============================================================================
# üìã Example Production Configuration
# =============================================================================
# For live trading, use these recommended settings:
#
# ATTACH_MODE=true
# DRY_RUN=false
# RISK_PCT=0.005
# MAX_TRADES_PER_DAY=2
# MAX_DAILY_LOSS_PCT=0.03
# TRADING_SESSION=LDN_NY
# LOG_LEVEL=INFO
# TELEGRAM_SEND_CHARTS=true
#
# ALWAYS test thoroughly with DRY_RUN=true first!

# =============================================================================
# üö® Security Notes
# =============================================================================
